---
interface Props {
	title: string;
	body: string;
  image: ImageMetadata;
}
const { title, body , image} = Astro.props;
---

<section id='getInTouch' class=" h-screen		 purpleDark text-white	flex ">
  <div class="content flex flex-wrap align-top content-start flex-1 p-4 text-left">
    <h3 class="text-5xl	 whitespace-nowrap font-bold flex flex-1 mb-5 ">{title}</h3>
    {body}
    form
  </div>
  <div class="image flex flex-1">
    <img src={image.src} width="auto" height='100%' alt="map">
  </div>
</section>

<style>
	#getInTouch .image img {
    height: 100%;
    width: auto;
	}
	
</style>
