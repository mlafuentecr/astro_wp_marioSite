---
interface Props {
	title: string;
	body: string;
  image: ImageMetadata;
}
const { title, body , image} = Astro.props;
---

<section id='getInTouch' class="h-screen flex content-start items-start justify-between purpleDark text-white	 ">
  <div class="content flex flex-wrap align-top content-start  p-4 text-left">
    <h3 class="text-5xl	 whitespace-nowrap font-bold flex flex-1 mb-5 ">{title}</h3>
    {body}
    <div class="form text-white">formxx</div>
  </div>
  <div class="image flex ">
    <img src={image.src} width="auto" height='100%' alt="map">
  </div>
</section>

