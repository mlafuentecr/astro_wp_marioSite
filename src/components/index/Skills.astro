
---
interface Props {
	skills: any;
	contentText: string;
}
const {  skills, contentText } = Astro.props;

---
<section id='skills' class=" animate  items-center
p-4	purpleLight text-white overflow-hidden">
<div class="wrapper  noshow flex flex-col md:flex-row min-h-screen gap-10" data-move="bottom-to-top" >
  <div class="contentText flex-1 " set:html={contentText} ></div>
  <div class="skillgroup flex-1 border-0 mr-28" >
      {skills.map((skill:any) => <div class="progressBar hover:-translate-y-1 hover:transition-all hover:opacity-75 "><div style={`background-color: ${skill.skillColor}; max-width: ${skill.skillPorcentage}%`}>{skill.skillName}</div></div>)}
  </div>
</div>
</section>
 